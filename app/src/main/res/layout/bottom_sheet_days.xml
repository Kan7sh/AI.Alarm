<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom_sheet_bg"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/mondaySelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/mondayRB"
            android:text="Monday"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/tuesdaySelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@id/tuesdayRB"
            android:layout_below="@id/mondaySelect"
            android:textSize="18sp"/>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/wednesdaySelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/wednesdayRB"
            android:layout_below="@id/tuesdaySelect"
            android:text="Wednesday"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/thursdaySelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/thursdayRB"
            android:layout_below="@id/wednesdaySelect"
            android:text="Thursday"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/fridaySelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thursdaySelect"
            android:layout_alignTop="@id/fridayRB"
            android:text="Friday"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/saturdaySelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@id/saturdayRB"
            android:layout_below="@id/fridaySelect"
            android:textSize="18sp"/>
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/sundaySelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/sundayRB"
            android:layout_below="@id/saturdaySelect"
            android:text="Sunday"
            android:layout_marginTop="10dp"

            android:textSize="18sp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/mondayRB"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/tuesdayRB"
            android:layout_below="@+id/mondayRB"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tuesdayRB"
            android:id="@+id/wednesdayRB"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/wednesdayRB"
            android:id="@+id/thursdayRB"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/thursdayRB"
            android:id="@+id/fridayRB"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/fridayRB"
            android:id="@+id/saturdayRB"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/saturdayRB"
            android:id="@+id/sundayRB"/>
        <Button
            android:layout_width="160dp"
            android:layout_height="65dp"
            android:text="Cancel"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_alignStart="@+id/sundaySelect"
            android:id="@+id/cancelDays"
            android:layout_below="@id/sundayRB"/>
        <Button
            android:layout_width="160dp"
            android:layout_height="65dp"
            android:text="Set"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:id="@+id/setDays"
            android:layout_marginTop="12dp"
            android:layout_alignEnd="@id/sundayRB"
            android:layout_below="@id/sundayRB"/>
    </RelativeLayout>

</layout>